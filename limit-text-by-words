//functions.php
function limit_words($text) {
	$limited_text = wp_trim_words( $text, $num_words = 11, $more = '... ' ); 
	echo $limited_text;
}

//content-mycontenttype.php - example to limit custom post type's title length
<?php echo limit_words(get_the_title()) ?>

//Reference: http://codex.wordpress.org/Function_Reference/wp_trim_words
